    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Image Selector</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f9f9f9;
            padding: 20px;
        }
        .image-container {
            margin-top: 20px;
            position: relative;
        }
        .comic-text {
            font-family: "Comic Sans MS", sans-serif;
            font-size: 20px;
            color: black;
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
        }
        .options, .search {
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <h1>Interactive Image Selector</h1>

    <div class="search">
        <input type="text" id="searchInput" placeholder="Search for an image type...">
        <button onclick="searchImages()">Search</button>
    </div>

    <div class="image-container">
        <img id="mainImage" src="default.jpg" alt="Image" style="width: 300px; height: auto; cursor: pointer;" onclick="showOptions()">
        <div class="comic-text" id="textOverlay">Your Comic Text Here</div>
    </div>

    <div class="options" id="options" style="display: none;">
        <p>Choose an image:</p>
        <select id="imageSelector" onchange="changeImage()">
            <option value="image1.jpg">Image 1</option>
            <option value="image2.jpg">Image 2</option>
            <option value="image3.jpg">Image 3</option>
        </select>
        <br>
        <p>Change text:</p>
        <input type="text" id="textInput" oninput="updateText()">
        <br>
        <p>Change text color:</p>
        <input type="color" id="colorPicker" onchange="changeTextColor()">
    </div>

    <button onclick="saveImage()">Save Image</button>

    <script>
        function showOptions() {
            document.getElementById('options').style.display = 'block';
        }

        function searchImages() {
            const query = document.getElementById('searchInput').value;
            alert('Search for: ' + query); // You can implement a real search functionality here
        }

        function changeImage() {
            const image = document.getElementById('imageSelector').value;
            document.getElementById('mainImage').src = image;
        }

        function updateText() {
            const text = document.getElementById('textInput').value;
            document.getElementById('textOverlay').innerText = text;
        }

        function changeTextColor() {
            const color = document.getElementById('colorPicker').value;
            document.getElementById('textOverlay').style.color = color;
        }

        function saveImage() {
            const mainImage = document.getElementById('mainImage');
            const link = document.createElement('a');
            link.download = 'image.png';
            link.href = mainImage.src;
            link.click();
        }
    </script>
</body>
</html>
